@model IEnumerable<Category>

<li class="dropdown">
    <a asp-area="" asp-controller="Catalog" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">Categories <b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-area="" asp-controller="Catalog" asp-action="Browse" asp-route-category="@category.Id">@category.Name</a>
            </li>
        }
        <!--<li class="divider"></li>
        <li>
            <a asp-controller="Store" asp-action="Index">More...</a>
        </li>-->
    </ul>
</li>